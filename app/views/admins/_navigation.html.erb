<header class="navigation-primary" 
        data-controller="navigation"
        data-navigation-target="header">
  <!-- Mobile trigger button -->
  <button class="navigation-drawer__trigger-button" 
    data-action="click->navigation-drawer#toggle">
    <%= inline_svg "icon-menu.svg", height: "20px", width: "20px" %>
  </button>

  <nav class="navigation-primary__left">
    <ul class="navigation-primary__links">
      <li class="navigation-primary__link">
        <%= link_to t(".posts"), admins_posts_path %>
      </li>

      <li class="navigation-primary__link">
        <%= link_to t(".hashtags"), admins_hashtags_path %>
      </li>
      
      <li class="navigation-primary__link">
        <%= link_to "Chat Users", admins_chat_users_path %>
      </li>
      
      <li class="navigation-primary__link">
        <%= link_to "Docs", admins_documents_path %>
      </li>
    </ul>
  </nav>

  <nav class="navigation-primary__right">
    <ul class="navigation-primary__links">
      <li class="navigation-primary__link">
        <%= link_to "site", root_path %>
      </li>

      <li class="navigation-primary__link">
        <%= link_to t(".sign_out"), destroy_admin_session_path, data: { turbo_method: :delete } %>
      </li>

      <li class="navigation-primary__link"
          data-navigation-target="themeSwitcher">
        <button type="button"
            data-action="click->theme#toggle"
            class="theme-toggle-button">
          <%= inline_svg "icon-theme-change.svg", width: "16px", height: "16px" %>
        </button>
      </li>
    </ul>
  </nav>
</header>
