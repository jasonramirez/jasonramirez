<section class="content content--reading">
  <h2>
    Hey, Boss
  </h2>

  <%= simple_form_for(
    resource,
    as: resource_name,
    url: session_path(resource_name),
    html: { data: { turbo: false } }
  ) do |f| %>
    <%= f.input :email, required: false, wrapper_html: { class: "sky-label" } %>
    <%= f.input :password, required: false, wrapper_html: { class: "sky-label" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <div class="form-actions u-margin-top-medium">
      <%= f.button :submit, value: t("admins.sessions.new.submit"), class: "button" %>
      <%= link_to(
        "Forgot your password?", new_password_path(resource_name),
        class: "button button--link"
      )%>
    </div>
  <% end %>
</section>