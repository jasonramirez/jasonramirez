<section class="content content--slim u-margin-top-none">
  <div class="post-search">
    <form id="search_form" action="<%= posts_path %>" class="post-search__form">
      <%= search_field_tag :search,
        params[:search],
        class: "search-input",
        placeholder: "Search"
      %>

      <% unless params[:search].blank? %>
        <%= link_to posts_path, class: "button button--secondary" do %>
          <%= inline_svg "icon-x.svg", height: "16px", width: "16px" %>
        <% end %>
      <% end %>

      <button type="submit" id="search_posts_submit" class="button button--primary">
        <%= inline_svg "icon-search.svg", height: "16px", width: "16px" %>
      </button>
    </form>

    <div class="post-search__results">
      <% unless params[:search].blank? %>
        <%= pluralize(@searched_posts.count, "post", "posts") %>
        found for search
        "<%= params[:search] %>".
      <% end %>
    </div>
  </div>
</section>

<section class="content content--slim">
<!-- latest post -->
</section>

<section class="content content--slim">
  <% if params[:search].blank? %>
    <% @posts.each do |post| %>
      <%= render "post_sample", post: post %>
    <% end %>
  <% else %>
    <% @searched_posts.each do |searched_post| %>
      <%= render "post_sample", post: searched_post %>
    <% end %>
  <% end %>
</section>
