<section class="content content--slim">
  <div>
    <h1>Request Chat Account</h1>
    
    <div>
      <p><strong>Note:</strong> All accounts are given 48 hours of access from the moment of first login. Account requests require admin approval before you can log in.</p>
    </div>

    <%= form_with model: @user, url: chat_register_path, method: :post do |form| %>
      <div class="sky-label">
        <%= form.text_field :name, required: true %>
        <%= form.label :name, "Name" %>
      </div>

      <div class="sky-label">
        <%= form.email_field :email, required: true %>
        <%= form.label :email, "Email" %>
      </div>

      <div class="sky-label">
        <%= form.password_field :password, required: true %>
        <%= form.label :password, "Password" %>
      </div>

     <%= form.submit "Request Account", class: "button button--primary u-margin-bottom-large" %>
    <% end %>
    
    <div>
      <p>Already have an account? <%= link_to "Login here", chat_login_path, class: "link" %></p>
    </div>
  </div>
</section>